{
  "version": 4,
  "configurations": [
    {
      "name": "WSL",
      "intelliSenseMode": "linux-gcc-x64",
      "compilerPath": "/usr/bin/gcc",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "includePath": [
        "${workspaceFolder}/**",                                 // your project
        "/usr/include",                                          // system headers
        "/usr/include/x86_64-linux-gnu",                         // distro-specific
        "/usr/local/cuda/include",                               // generic symlink
        "/usr/local/cuda-13.0/include",                          // symlink in cuda-13.0
        "/usr/local/cuda-13.0/targets/x86_64-linux/include"      // real headers
      ],
      "browse": {
        "path": [
          "${workspaceFolder}",
          "/usr/local/cuda/include",
          "/usr/local/cuda-13.0/include",
          "/usr/local/cuda-13.0/targets/x86_64-linux/include"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}