{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: cuda",
      "type": "shell",
      "command": "nvcc",
      "args": [
        "-g",
        "${file}",                              // current .cu file
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]           // for parsing errors
    }
  ]
}
